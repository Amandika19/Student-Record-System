<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="260dp"
        android:layout_height="130dp"
        android:src="@drawable/ucsi_university_logo"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="UCSI University Logo" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Record System"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        android:textColor="#FFFFFF"
        android:shadowColor="#4A2E82"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnAddStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Student"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:elevation="4dp" />

    <Button
        android:id="@+id/btnViewStudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Students"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:elevation="4dp" />

<!--    <Button-->
<!--        android:id="@+id/btnSearchStudent"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Search Student" />-->

<!--    <Button-->
<!--        android:id="@+id/btnDeleteStudent"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Delete Student" />-->

<!--    <Button-->
<!--        android:id="@+id/btnSortStudents"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Sort Students" />-->

    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:elevation="4dp" />

</LinearLayout>
